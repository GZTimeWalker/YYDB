      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug integration test 'ffi'",
      "cargo": {
        "args": ["test", "--no-run", "--test=ffi", "--package=yengine_bridge"],
        "filter": {
          "name": "ffi",
          "kind": "test"
        }
      },
      "args": ["--nocapture"],
      "cwd": "${workspaceFolder}"
